<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="plugin.video.nhl-rewind"
       name="NHL Rewind"
       version="0.1.4"
       provider-name="MetalChris">
    <requires>
        <import addon="xbmc.python" version="2.1.0"/>
	<import addon="script.module.beautifulsoup" version="3.2.1"/>
        <import addon="plugin.video.youtube" version="3.1.0" />
        <import addon="script.module.simplejson" version="3.3.0"/>    
    </requires>
    <extension point="xbmc.python.pluginsource"
               library="default.py">
        <provides>video</provides>
    </extension>
    <extension point="xbmc.addon.metadata">
        <platform>all</platform>
        <license>GPL 2.0</license>
        <summary lang="en">NHL Rewind</summary>
        <description lang="en">Watch the latest videos from the NHL Network, NBC Sports, MSG Network, Fox Sports, SportsNet.ca, ESPN, and Comcast SportsNet.  Watch full and condensed game replays from the last 7 days, plus Hockey Fights!</description>
        <disclaimer lang="en">This addon is a project for entertainment purposes only.  Not affiliated with, or endorsed by the NHL in any way shape or form.</disclaimer>
    </extension>
    <extension point="xbmc.addon.repository" name="MetalChris's Add-on Repository">
        <info>http://www.the-antinet.com/addons/addons.xml</info>
        <checksum>http://www.the-antinet.com/addons/addons.xml.md5</checksum>
        <datadir zip="true">http://www.the-antinet.com/addons/</datadir>
    </extension>
</addon>
